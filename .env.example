# ============================================
# КОНФИГУРАЦИЯ СЕРВЕРА
# ============================================

# Порт сервера
PORT=3000

# Режим работы: development | production
NODE_ENV=development

# URL фронтенда (для CORS в production)
FRONTEND_URL=https://teplo-arctici.ru

# ============================================
# БАЗА ДАННЫХ PostgreSQL
# ============================================

# Формат: postgresql://user:password@host:port/database
# Локальная разработка:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/teplo_arctici

# Production (например, Neon, Supabase, Railway):
# DATABASE_URL=postgresql://user:password@host.neon.tech/teplo_arctici?sslmode=require

# ============================================
# БЕЗОПАСНОСТЬ (КРИТИЧНО!)
# ============================================

# JWT секрет для подписи токенов
# ВАЖНО: Сгенерируйте случайную строку минимум 32 символа!
# Команда: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING

# Секрет сессии
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING

# ============================================
# АДМИНИСТРАТОР
# ============================================

# Email администратора
ADMIN_EMAIL=admin@teplo-arctici.ru

# Пароль (минимум 10 символов, буквы + цифры + спецсимволы)
# ВАЖНО: Смените после первого входа!
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# ============================================
# RATE LIMITING
# ============================================

# Окно лимита в миллисекундах (15 минут)
RATE_LIMIT_WINDOW_MS=900000

# Максимум запросов за окно
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# ДОПОЛНИТЕЛЬНО
# ============================================

# Система верификации хешей
VERIFICATION_ENABLED=false
